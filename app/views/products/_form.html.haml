.form-box
  = simple_form_for(@product, :html => { :class => 'form-horizontal' }) do |f|    
    .form-input-boxes 
      = f.text_field :name, :class => 'text_field' 
      .left= f.association :brand, :prompt=>"Choose a Brand"
      .right= f.text_field :model_num, :prompt=>"Model Number"
      = f.association :categories
      = f.text_area :blurb, :class => 'wysihtml5', :style=>"height:100px;" 
      = f.text_area :body, :class => 'wysihtml5', :style=>"height:200px;"
      .left= f.text_field :sku
      .right= f.select :sku_type, :collection=>Product.select_sku_type
      
      = f.submit nil, :class => 'btn btn-primary'

    -if false && params[:detailed]
      .form-inputs
        = f.association :topic, :prompt=>"Choose a Topic"
        = f.input :keywords
        = f.input :url
        = f.input :permalink  
        = f.date_select :active_date
        = f.date_select :deactivated_date
        = f.text_field :cached_tag_list
        = f.input :cover
      - if @product.errors.any?
        #error_explanation
          %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
          %ul
            - @product.errors.full_messages.each do |msg|
              %li= msg
              
.image-box 
  =#render :partial=>'photos/upload_form', :locals=>{:parent=>@product}
  .clearfix

