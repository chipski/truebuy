.form-box
  = simple_form_for(@location, :html => { :class => 'form-horizontal' }) do |f|    
    .form-input-boxes 
      %b Name
      = f.text_field :name, :class => 'text_field' 
      = f.text_field :street, :label=>:street, :class => 'text_field' 
      = f.text_field :city, :class => 'text_field' 
      = f.text_field :us_state, :class => 'text_field' 
      = f.text_field :zipcode, :class => 'text_field' 
      = f.text_field :country, :class => 'text_field' 
      = f.text_field :phone
      = f.association :store
      = f.association :user
      = f.text_area :blurb, :class => 'wysihtml5', :style=>"height:100px;" 
      = f.submit nil, :class => 'btn btn-primary'
    
    - if @location.errors.any?
      #error_explanation
        %h2= "#{pluralize(@location.errors.count, "error")} prohibited this location from being saved:"
        %ul
          - @location.errors.full_messages.each do |msg|
            %li= msg
      
    -if params[:detailed]
      .form-inputs
        = f.input :full_address
        = f.input :keywords
        = f.input :permalink  
        = f.input :url
        = f.input :cached_tag_list
        = f.input :permalink

