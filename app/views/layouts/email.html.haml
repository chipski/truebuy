                          %img{:alt=>"", :border=>"0", :src=>@site_logo, :style=>"margin: 0;padding: 0;border: 0;display: inline;float: left;height: 58px;"}
        
                          
                      %td{:style=>"color: #c7c7c7; border-collapse: collapse;", :valign=>"top"}
