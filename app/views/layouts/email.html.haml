                        %table{:border=>"0", :cellpadding=>"10", :cellspacing=>"0", :width=>"100%"}
                          %tr
                            %td{:style=>"padding-bottom: 0;border-collapse: collapse;", :valign=>"top"}
                              %img{:alt=>"", :border=>"0", :src=>@hero_url, :style=>"margin: 0;padding: 0;max-width: 560px;border: 0;height: auto;"}
                          %tr
                            %td{:style=>"padding-top: 0;border-collapse: collapse;", :valign=>"top"}
                              %table{:border=>"0", :cellpadding=>"16", :cellspacing=>"0", :style=>"background-color:#e6e6e6;", :width=>"100%"}
                                %tr
                                  %td.bodyContent{:style=>"color: #444;;font-size: 15px;line-height: 180%;text-align: left;", :valign=>"top"}
                                    %h1{:style=>"color: #444;display: block;font-size: 30px;font-weight: bold;margin: 0 0 10px 0;text-align: left;"} 
                                      =yield :title
                                    =yield :blurb
                    %tr
                      %td.bodyContent{:colspan=>"3", :style=>"border-collapse: collapse;color:#444;font-family: Helvetica;font-size: 16px;line-height: 150%;text-align: left;padding: 0 14px 14px;", :valign=>"top"}
                        =yield :body
                      
              %tr
                %td{:align=>"center", :style=>"border-collapse: collapse;", :valign=>"top"}
