                    %tr
                      %td.footerContent{:style=>"padding-top: 20px;padding-bottom: 40px;border-collapse: collapse;color: #CCCCCC;font-family: Helvetica;font-size: 10px;line-height: 150%;text-align: left;", :valign=>"top"}
