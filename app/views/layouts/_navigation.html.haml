.navbar
  = link_to "Reviews", root_path, :class => 'brand'
  
  #notice= render 'layouts/messages'
  - if user_signed_in?
    .btn-group.pull-right    
      %a.btn.btn-mini.dropdown-toggle(data-toggle="dropdown" href="#")
        %i.icon-cog
        = "Account" 
        %span.caret
      %ul.dropdown-menu
        %li=link_to "Topics", topics_path
        %li=link_to "Companies", companies_path
        %li= link_to 'Edit account', edit_user_registration_path
        - if current_user.has_role? :admin
          %li= link_to 'Admin', users_path
    %ul.nav.pull-right
      %li= link_to 'Logout', destroy_user_session_path, :method=>'delete'
  -else
    %ul.nav.pull-right
      %li= link_to 'Login', new_user_session_path