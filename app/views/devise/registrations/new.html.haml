#request-invite.modal{:style => "display: #{@user.errors.any? ? 'block' : 'none';}"}
  = simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal' } do |f|
    .modal-header
      %a.close{"data-dismiss" => "modal"} Ã—
      %h3 Request Invitation
    .modal-body
      = f.error_notification
      = f.input :email, :placeholder => 'user@example.com'
    .modal-footer
      .btn-group.pull-right
        = f.submit "Request Invitation", :class => "btn btn-primary", :id => 'invitation_button'
        %a.btn{"data-dismiss" => "modal", :href => "#"} Close

.img-bar
  -if @company = Company.active.first
    =image_tag(@company.cover_url)
    .title
      %h1= @company.name
    .blurb
      %h2 Want in?
      =@company.blurb ? @company.blurb.html_safe : ""

    #call-to-action
      %a.btn.btn-primary.btn-large{"data-toggle" => "modal", :href => "#request-invite"} Request invite
