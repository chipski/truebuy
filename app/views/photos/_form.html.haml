= form_for @photo, :html => { :class => 'form-horizontal' } do |f|
  = image_tag @photo.image.large.url, :id => 'cropbox'
  - %w[x y w h].each do |attribute|
    = f.hidden_field "crop_#{attribute}"
  .control-group
    = f.label :blurb, :class => 'control-label'
    .controls
      = f.text_field :blurb, :class => 'text_field'
  
  .form-actions
    = f.submit nil, :class => 'btn btn-primary  btn-mini'
    = link_to "Cancel", photos_path, :class => 'btn btn-mini' 
    = link_to 'Default', '', :class => 'btn btn-mini btn-success' , :id => 'make_default'

%script{:charset => "utf-8", :type => "text/javascript"}
  $(function () {
  $('#make_default').click(function(event) {
  event.preventDefault();
  $.ajax({
  url: '#{make_default_photos_path}',
  type: 'POST',
  data: {id : #{@photo.id}, topic_id : #{@topic ? @topic.id : ''}}
  });
  });
  });
  

-#/ 
  = simple_form_for(@photo, :html => { :class => 'form-horizontal' }) do |f|
  .form-inputs
    = f.input :uid
    = f.input :permalink
    = f.input :name
    = f.input :keywords
    = f.input :blurb
    = f.input :state
    = f.input :type
    = f.input :image_url
    = f.input :image_uid
    = f.input :image_name
    .form-actions
      = f.button :submit                
