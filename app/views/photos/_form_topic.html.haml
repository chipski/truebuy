= form_for [@topic, @photo], :html => { :class => 'form-horizontal' } do |f|
  .image-box 
    = image_tag @photo.image.large.url, :id => 'cropbox'
    - %w[x y w h].each do |attribute|
      = f.hidden_field "crop_#{attribute}"

  .control-box 
    %b Name
    = f.text_field :name, :class => 'text_field'
    = f.text_area :blurb, :class => 'wysihtml5'
            
    = f.submit nil, :class => 'btn btn-primary  btn-mini'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), |
      topic_path(@topic), :class => 'btn btn-mini'             |
    = link_to 'Default', '', :class => 'btn btn-mini btn-success' , :id => 'make_default'

%script{:charset => "utf-8", :type => "text/javascript"}
  $(function () {
  $('#make_default').click(function(event) {
  event.preventDefault();
  $.ajax({
  url: '#{make_default_topic_photos_path(@topic)}',
  type: 'POST',
  data: {photo_id : #{@photo.id}, topic_id : #{@topic.id}}
  });
  });
  });
  

-#/ 
  = simple_form_for([@topic, @photo], :html => { :class => 'form-horizontal' }) do |f|
  .form-inputs
    = f.input :uid
    = f.input :permalink
    = f.input :name
    = f.input :keywords
    = f.input :blurb
    = f.input :state
    = f.input :type
    = f.input :image_url
    = f.input :image_uid
    = f.input :image_name
    .form-actions
      = f.button :submit                
