.row#masonry
  %input#categoryID{:type => "hidden", :value => @category.id}
  - @category.topics.each do |topic|  
    .card#brand
      .thumbnail=link_to image_tag(topic.cover_url("small")), topic_path(topic)
      %h4=topic.name 

  - @category.slider_photos.each_with_index do |photo, index|  
    .card.thumb
      .thumbnail=link_to image_tag(photo.image.thumb.url, :class=>"rsImg"), "#image-#{index}"
      %h4=photo.name 
  
  -if false
    - @category.companies.each do |company|  
      .card.company
        .thumbnail=link_to image_tag(company.cover_url("small")), company_path(company)
        %h4=company.name 
 
    - @category.brands.each do |brand|  
      .card.brand
        .thumbnail=link_to image_tag(brand.cover_url("small")), brand_path(brand)
        %h4=brand.name 

=content_for :sidebar do
  %h2 Browse By
  .well.sidebar-nav.advanced_search
    %ul.nav.nav-list
      %li.nav-header Brands
      =#form_tag categories_path(:action => :search), :method => :post, :class => :standard_form do
      
      -@category.brands.each do |brand|
        %li= check_box_tag :brand, :value=>brand.id, :label=>brand.name, :class=>'check_box'  
      %li.nav-header Categories
      %li= check_box_tag :category, :value=>@category.id, :label=>@category.name, :class=>'check_box' 
      %li= radio_button_tag :det, "detailed", :class => :radio
      %li= radio_button_tag :det, "list", :class => :radio
      -if is_admin?
        %li.nav-header Admin
        %li= link_to 'edit', edit_category_path(@category)
  .info
    =@category.body ? @category.body.html_safe : ""       
      
 