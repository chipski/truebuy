-entity = company 
-if true
  .btn-group    
    %a.btn.btn-mini.dropdown-toggle(data-toggle="dropdown" href="#")
      %i.icon-cog
      ="Launch"
      %span.caret
    %ul.dropdown-menu
      %li= link_to 'Edit', polymorphic_path(entity, :action=>"edit")
      - if entity.active?
        %li
          =link_to polymorphic_path(entity, :action=>"update_state", :state=>"inactive"), :method=>:put do
            ="Inactivate"
            %i.icon-zoom-in
      -else
        %li
          =link_to polymorphic_path(entity, :action=>"update_state", :state=>"active"), :method=>:put do
            ="Activate"
            %i.icon-zoom-in
      %li=link_to "Topics", topics_path
      %li=link_to "Companies", companies_path
            
