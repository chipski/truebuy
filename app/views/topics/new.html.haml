- model_class = Topic
.row
  %h1 New topic

  = simple_form_for(Topic.new, :html => { :class => 'form-horizontal' }, :method=>:post) do |f|
    .form-input-boxes 
      = f.error_notification
      .form-inputs.tight
        = f.text_field :name, :class => 'text_field' 
        = f.association :company
        = f.text_area :blurb, :class => 'wysihtml5', :style=>"height:100px;" 
        = f.text_area :body, :class => 'wysihtml5', :style=>"height:200px;"
        -if params[:detailed]
          .form-inputs
            = f.input :keywords
            = f.input :permalink  
            = f.input :cover    
        = f.submit nil, :class => 'btn btn-primary'
    