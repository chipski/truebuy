- model_class = Topic
.row
  %h1 New topic
  .form-box
    = simple_form_for(Topic.new, :html => { :class => 'form-horizontal' }, :method=>:post) do |f|
      .form-input-boxes 
        = f.error_notification
        .form-inputs.tight
          = f.text_field :name, :class => 'text_field' 
          .left= f.association :company, :prompt=>"Choose a Company"
          .right= f.association :brand, :prompt=>"Choose a Brand"
          .clearfix
          = f.association :categories
          = f.text_area :blurb, :class => 'wysihtml5', :style=>"height:100px;" 
          = f.text_area :body, :class => 'wysihtml5', :style=>"height:200px;"
          -if params[:detailed]
            .form-inputs
              = f.input :keywords
              = f.input :permalink  
              = f.input :cover    
          = f.submit nil, :class => 'btn btn-primary'
  .image-box   
    %h5 Link to a parent Company/Brand & Categories
    %h5 You may add photos after this topic is created
    