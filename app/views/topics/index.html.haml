.row.masonry
  %h1 Listing topics
  %ul.files.thumbnails
    - @topics.each do |topic|  
      %li.span3.card#topic
        .thumbnail
          =link_to image_tag(topic.cover_url("small")), topic_path(topic)
        %h4{:style=>"text-align: center;"}
          =topic.photos.count
          =topic.name  



  =link_to 'New', new_topic_path, :class => 'btn btn-mini'