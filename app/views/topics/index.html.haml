.row.masonry
  %h1 Listing topics
  %ul.files.thumbnails
    - @topics.each do |topic|  
      %li.span3.card#topic
        .thumbnail
          -if topic.cover.blank? or !Photo.find_by_id(topic.cover)  
            =link_to image_tag("/NoImageAvailable.jpg"), topic_path(topic)
          -else
            =link_to image_tag(topic.cover_url("small")), topic_path(topic)
        .card_edit
          =render :partial=>'shared/edit_menu', :locals=>{:entity=>topic}
        %h4{:style=>"text-align: center;"}
          =topic.photos.count
          =topic.name  



  =link_to 'New', new_topic_path, :class => 'btn btn-mini'