.row.masonry
  %h1 Listing topics
  %ul.files.thumbnails
    - @topics.each do |topic|  
      %li.span3.card#topic
        .thumbnail
          -if topic.cover.blank? or !Photo.find_by_id(topic.cover)  
            =link_to image_tag("/NoImageAvailable.jpg"), topic_path(topic.id)
          -else
            =link_to image_tag(topic.cover_url("small")), topic_path(topic.id)
        .card_edit
          =render :partial=>'shared/edit_menu', :locals=>{:entity=>topic}
        .caption
          %p{:style=>"text-align: center;"}
            =link_to edit_topic_path(topic.id), :class=>"link" do
              %i.icon-edit
              Edit
            =topic.photos.count
            =topic.name  



  =link_to 'New', new_topic_path, :class => 'btn btn-mini'