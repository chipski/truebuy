-action = action || controller.action_name

-topic = @topic || parent
-photo = @photo || Photo.create()

-if @company             
  .page-header
    %h1
      =link_to topic_path(topic) do
        %i.icon-list-alt
      -if action == "edit" 
        = "Edit "           
        = link_to topic.name, topic 
      -elsif action == "new"
        = "New "
      -else
        = "Photo "
        %span.small-gray
          =link_to "edit", edit_topic_photo_path(topic, photo), :class => 'btn btn-mini' 
-else                          
  .page-header
    %h1 
      =link_to topics_path do
        %i.icon-list-alt
      -if action == "edit" 
        = "Edit "           
        =link_to topic.name, topic_path(topic)   
      -elsif action == "new"
        = "New "
      -else
        = "Photo "
        %span.small-gray
          =link_to "edit", edit_topic_path(topic), :class => 'btn btn-mini'    
